{
  "include" :[
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",                          
    "module": "commonjs",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                      
    "skipLibCheck": true,
    "sourceMap": true,                        
  }
  
}
